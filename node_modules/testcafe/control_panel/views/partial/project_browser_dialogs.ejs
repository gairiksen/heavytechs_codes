<div id="dir-operations-dialog-wrapper">
    <div id="rename-dir-dialog" data-title="Rename directory" class="dir-operations-dialog">
        <table class="dialog-edit-form">
            <tbody>
            <tr>
                <td><label for="rename-dir-dir-name">Directory name:</label></td>
                <td><input type="text" value="" id="rename-dir-dir-name" /><div class="input-err"><p class="err-text"></p></div></td>
            </tr>
            </tbody>
        </table>

        <button id="rename-dir-btn" class="button">OK</button>
    </div>
    <div id="delete-dir-dialog" data-title="Delete directory" class="dir-operations-dialog">
        <div class="dialog-text">
            <h2>Are you sure you want to delete</h2>
        </div>

        <button id="delete-dir-no-btn" class="button">No</button>
        <button id="delete-dir-yes-btn" class="button">Yes</button>
    </div>
    <div id="edit-fixture-dialog" data-title="Modify fixture" class="dir-operations-dialog">
        <table class="dialog-edit-form">
            <tbody>
            <tr>
                <td><label for="edit-fixture-name">Fixture name:</label></td>
                <td><input type="text" value="" id="edit-fixture-name" /><div class="input-err"><p class="err-text"></p></div></td>
            </tr>
            <tr>
                <td><label for="edit-fixture-filename">File name:</label></td>
                <td><input type="text" value="" id="edit-fixture-filename" /><div class="input-err"><p class="err-text"></p></div></td>
            </tr>
            <tr>
                <td><label for="edit-fixture-page">Web page:</label></td>
                <td><input type="text" value="" id="edit-fixture-page" /><div class="input-err"><p class="err-text"></p></div></td>
            </tr>
            </tbody>
        </table>
        <div id="edit-fixture-auth-credentials-group" class="dialog-form-group">
            <div class="group-header">
                <span class="auth-credential-icon"></span>
                <a id="edit-fixture-show-credentials">HTTP Basic / NTLM authentication</a>
                <div class="arrow"></div>
            </div>
            <table>
                <tbody>
                <tr>
                    <td><label for="edit-fixture-auth-username">User name:</label></td>
                    <td><input type="text" value="" id="edit-fixture-auth-username" /><div class="input-err"><p class="err-text"></p></div></td>
                </tr>
                <tr>
                    <td><label for="edit-fixture-auth-password">Password:</label></td>
                    <td><input type="password" value="" id="edit-fixture-auth-password" /><div class="input-err"><p class="err-text"></p></div></td>
                </tr>
                </tbody>
            </table>
        </div>

        <button id="edit-fixture-btn" class="button">OK</button>
    </div>
    <div id="delete-fixture-dialog" data-title="Delete fixture" class="dir-operations-dialog">
        <div class="dialog-text">
            <h2>Are you sure you want to delete</h2>
        </div>

        <button id="delete-fixture-no-btn" class="button">No</button>
        <button id="delete-fixture-yes-btn" class="button">Yes</button>
    </div>
    <div id="rename-test-dialog" data-title="Rename test" class="dir-operations-dialog">
        <table class="dialog-edit-form">
            <tbody>
            <tr>
                <td><label for="test-new-name">Test name:</label></td>
                <td><input type="text" value="" id="test-new-name" /><div class="input-err"><p class="err-text"></p></div></td>
            </tr>
            </tbody>
        </table>

        <button id="rename-test-btn" class="button">OK</button>
    </div>
    <div id="delete-test-dialog" data-title="Delete Test" class="dir-operations-dialog">
        <div class="dialog-text">
            <h2>Are you sure you want to delete</h2>
        </div>

        <button id="delete-test-no-btn" class="button">No</button>
        <button id="delete-test-yes-btn" class="button">Yes</button>
    </div>
</div>