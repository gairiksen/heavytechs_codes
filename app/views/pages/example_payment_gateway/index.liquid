---
layout: null
---
<html dir="{{direction}}" lang="{{context.language}}">
  <head>
    <link rel="stylesheet" href="{{ 'css/app.css' | asset_url }}">
  </head>
  <body class="font-sans antialiased leading-normal text-content bg-page">
    <div class="min-w-screen min-h-screen bg-gray-200 flex items-center justify-center px-5 pb-10 pt-16">
      <div class="w-full mx-auto rounded-lg bg-white shadow-lg p-5 text-gray-700" style="max-width: 600px">
        <div class="w-full pt-1 pb-5">
          <div class="bg-indigo-500 text-white overflow-hidden rounded-full w-20 h-20 p-5 -mt-16 mx-auto shadow-lg flex justify-center items-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" /></svg>
          </div>
        </div>
        <div class="mb-10">
          <h1 class="text-center font-bold text-xl uppercase">Example Payments</h1>
        </div>
        <form action="/example_payment_gateway/webhook" method="POST">
          <input name="transaction_id" value="{{context.params.transaction_id}}" type="hidden">
          <div class="mb-10">
            <button class="block w-full max-w-xs mx-auto bg-indigo-500 hover:bg-indigo-700 focus:bg-indigo-700 text-white rounded-lg px-3 py-3 font-semibold" name="payment_status" value="success">
              PAY NOW
            </button>
          </div>
          <div>
            <button class="block w-full max-w-xs mx-auto bg-gray-500 hover:bg-gray-700 focus:bg-indigo-700 text-white rounded-lg px-3 py-3 font-semibold" name="payment_status" value="failed">
              PAYMENT FAILED
            </button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>

