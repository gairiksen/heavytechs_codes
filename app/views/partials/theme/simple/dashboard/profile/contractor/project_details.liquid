<div class="profileEdit bg-gray-100 pt-9 pb-28"><!--profileEdit-->
<div class="container m-auto px-3.5">

<div class="flex justify-between flex-col md:flex-row">
    <div class="w-full mb-6 md:mb-0 md:w-60">

        {%comment%}
        <div class="bg-white pt-3.5 px-5 pb-7 text-center rounded-md mb-4">
            <div class="flex flex-col w-77 mb-0 text-center">
            <figure>
            {% render 'theme/simple/ui/avatar', profile: object, size: 200, class: 'w-32 h-32 m-auto rounded-full' %}
            </figure>
            <div class="px-0 mt-5 mechanic_logo">
            {% render 'theme/simple/photos/uppy_area' %}
            </div>
            </div>
        </div>
        {%endcomment%}
        {% render 'theme/simple/dashboard/profile/contractor/photo_upload_area', object: object, presigned_url: presigned_url %}
        {% render 'theme/simple/dashboard/profile/contractor/profile_completion_bar', object: object %}

        {%comment%}
        <div class="bg-white pt-3.5 px-5 pb-7 text-center rounded-md">
            <h3 class="mb-2.5 text-base text-gray-800 font-bold">Fill in your account</h3>
            <p class="text-sm font-normal text-gray-400 mb-5">
                To make your profile visible to other users, fill in the required fields
            </p>

            <div>
                <span class="block text-right text-sm text-gray-400 mb-2">30%</span>
                <ul class="flex justify-between items-center">
                    <li class="h-1.5 rounded-lg w-1/12 md:w-6 bg-green-600"></li>
                    <li class="h-1.5 rounded-lg w-1/12 md:w-6 bg-green-600"></li>
                    <li class="h-1.5 bg-gray-300 rounded-lg w-1/12 md:w-6"></li>
                    <li class="h-1.5 bg-gray-300 rounded-lg w-1/12 md:w-6"></li>
                    <li class="h-1.5 bg-gray-300 rounded-lg w-1/12 md:w-6"></li>
                    <li class="h-1.5 bg-gray-300 rounded-lg w-1/12 md:w-6"></li>
                    <li class="h-1.5 bg-gray-300 rounded-lg w-1/12 md:w-6"></li>
                </ul>
            </div>
        </div>
        {%endcomment%}

        <div class="text-center mt-3">
            <a href="/dashboard/profile/contractor/post_project" class="hover:text-white heavytechs-bg-dark-orange text-white px-6 leading-10 rounded-3xl text-base inline-block w-11/12 m-auto">Post a project</a>
        </div>

        <!--<div class="pt-14 pb-14 md:pb-0">
            <ul class="customRadio">
                <li class="mb-5">
                    <input id="available" type="radio" name="available" value="1" checked="checked">
                    <label for="available" class="text-base font-medium text-gray-800"><span><span></span></span>Available</label>
                </li>
                <li>
                    <input id="unavailable" type="radio" name="available" value="1">
                    <label for="unavailable" class="text-base font-medium text-gray-800"><span><span></span></span>Unavailable</label>
                </li>
            </ul>
        </div>-->

    </div>

    <div class="profileEdit_right w-full">
        <div class="mb-8 bg-white">
            <ul class="flex items-center flex-col md:flex-row">
                <li class="w-full md:w-auto">
                    <a href="/dashboard/profile/contractor/bio" 
                    class="text-base font-normal text-gray-800 w-full text-center h-12 flex items-center justify-center md:w-36"">Company Bio</a>
                </li>
                <li class="w-full md:w-auto">
                    <a href="/dashboard/profile/contractor/projects" class="text-base font-normal text-gray-800 w-full text-center h-12 flex items-center justify-center md:w-36">Projects</a>
                </li>
                <li class="w-full md:w-auto">
                    <a href="/dashboard/profile/contractor/post_project" class="text-base w-full text-center h-12 flex items-center justify-center md:w-36 heavytechs-border-color-orange heavytechs-text-dark-orange font-medium border-b-2">Post a project</a>
                </li>
            </ul>
        </div>


        <div class="mb-8">
            <a href="/dashboard/profile/contractor/projects" class="flex items-center text-indigo-400 hover:underline">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Project listing
            </a>
        </div>
        <div>
        <div class="bg-white rounded-md shadow-sm px-6 pt-8 pb-1 relative">
        <form action="#">
            <div class="absolute right-7 top-10">
                <a href="/dashboard/profile/contractor/edit_project?project_id={{project_details.id}}">
                    <img src="{{'images/edit-icon.svg' | asset_url}}" alt="">
                </a>
            </div>

            <div class="mb-8">
                <h4 class="block text-base font-bold text-gray-600 mb-2">Project name</h4>
                <span class="block text-base text-gray-500">{{project_details.project_name}}</span>
            </div>

            <div class="mb-8">
                <h4 class="block text-base font-bold text-gray-600 mb-2">Longer Description</h4>
                <p class="block text-base text-gray-500">{{project_details.longer_description}}</p>
            </div>

            <div class="mb-8">
                <h4 class="block text-base font-bold text-gray-600 mb-2">Location of project</h4>
                <span class="block text-base text-gray-500">{{project_details.location_of_project}}</span>
            </div>

            <div class="mb-8">
                <h4 class="block text-base font-bold text-gray-600 mb-2">Schedule</h4>
                <span class="block text-base text-gray-500">{{project_details.expected_start_date | date: "%b %d, %Y"}} - {{project_details.expected_end_date | date: "%b %d, %Y"}}</span>
            </div>

            <div class="mb-8">
                <h4 class="block text-base font-bold text-gray-600 mb-2">Duration Type</h4>
                <ul class="customRadio">
                    <li class="mb-4">
                        <input id="duration1" type="radio" name="duration" checked="">
                        <label for="duration1" class="text-base font-medium text-gray-800">
                        <span><span></span></span>{{project_details.duration_type}}</label>
                    </li>                    
                </ul>
            </div>

            <div class="mb-8">
                <h4 class="block text-base font-bold text-gray-600 mb-2">Special Pay (Davis Bacon)</h4>
                <ul class="customRadio flex items-center gap-10 mb-7">
                    <li>
                        <input id="Pay1" type="radio" name="Pay" value="1" checked="">
                        <label for="Pay1" class="text-base font-medium text-gray-800">
                        <span><span></span></span>{{project_details.special_pay}}</label>
                    </li>
                    
                </ul>
                {% if project_details.special_pay == 'Yes' %}
                <p class="block text-base text-gray-500">{{project_details.short_description}}</p>
                {% endif %}
            </div>


            <div class="mb-8">
                <h4 class="block text-base font-bold text-gray-600 mb-2">Specialized Training</h4>
                <ul class="customCheck md:flex items-center gap-4 flex-wrap">
                    {% if project_details.osha == '1' or  project_details.msha == '1' %}

                        {% if project_details.osha == '1'  %}
                            <li>
                                <input id="training1" type="checkbox" checked="">
                                <label for="training1" class="text-base font-medium text-gray-800">
                                <span><span></span></span>OSHA</label>
                            </li>
                        {%endif%}

                        {% if project_details.msha == '1' %}
                            <li>
                                <input id="training1" type="checkbox" checked="">
                                <label for="training1" class="text-base font-medium text-gray-800">
                                <span><span></span></span>MSHA</label>
                            </li>
                        {%endif%}
                    {%else%}
                        <li>Not Applicable</li>
                    {%endif%}
                    
                </ul>
            </div>

            <div class="mb-8">
                <h4 class="block text-base font-bold text-gray-600 mb-2">Insurance</h4>
                <ul class="customCheck gap-4 flex flex-col">
                    {% if project_details.additionally_insured == '1' or  project_details.insurance_cert_holder == '1' or project_details.liability_limits == '1' %}
                        {% if project_details.additionally_insured == '1' %}
                        <li>
                            <input id="insurance1" type="checkbox" checked="">
                            <label for="insurance1" class="text-base font-medium text-gray-800">
                            <span><span></span></span>Additionally Insured</label>
                        </li>   
                        {% endif %}

                        {% if project_details.insurance_cert_holder == '1' %}
                        <li>
                            <input id="insurance1" type="checkbox" checked="">
                            <label for="insurance1" class="text-base font-medium text-gray-800">
                            <span><span></span></span>Insurance cert holder</label>
                        </li>   
                        {% endif %}

                        {% if project_details.liability_limits == '1' %}
                        <li>
                            <input id="insurance1" type="checkbox" checked="">
                            <label for="insurance1" class="text-base font-medium text-gray-800">
                            <span><span></span></span>Liability Limits</label>
                        </li>   
                        {% endif %}
                    {%else%}
                        <li>Not Applicable</li>
                    {%endif%}                 
                </ul>
            </div>

            <div class="mb-8">
                <h4 class="block text-base font-bold text-gray-600 mb-2">Crane Required</h4>
                <ul class="customRadio flex items-center gap-10">
                    <li>
                        <input id="Crane1" type="radio" name="Crane" checked="">
                        <label for="Crane1" class="text-base font-medium text-gray-800">
                        <span><span></span></span>{% if project_details.crane_required == 'Yes' %}Yes{%else%}No{%endif%}</label>
                    </li>                    
                </ul>
            </div>

            <div class="mb-9">
                <h4 class="block text-base font-bold text-gray-600 mb-2">Drivers Licence required</h4>

                <ul class="customRadio flex flex-col gap-4 mb-5">
                    <li>
                        <input id="Yes1" type="radio" name="drivers_yes" checked="">
                        <label for="Yes1" class="text-base font-medium text-gray-800">
                        <span><span></span></span>{% if project_details.crane_required == 'Yes' %}Yes{%else%}No{%endif%}</label> 
                    </li>

                    {% if project_details.crane_required == 'Yes' %}
                    <li>
                        <input id="Yes2" type="radio" name="drivers_no" checked="">
                        <label for="Yes2" class="text-base font-medium text-gray-800">
                        <span><span></span></span>{{project_details.driver_license_class}}</label>
                    </li>
                    {%endif%}                    
                </ul>

                {% if project_details.crane_required == 'Yes' %}
                <ul class="customCheck flex flex-row gap-4 flex-wrap">

                    {% if project_details.tanker == '1' %}
                    <li>
                        <input id="Tanker1" type="checkbox" checked="">
                        <label for="Tanker1" class="text-base font-medium text-gray-800">
                        <span><span></span></span>Tanker</label>
                    </li>
                    {% endif %}
                    {% if project_details.air_brakes == '1' %}
                    <li>
                        <input id="Tanker1" type="checkbox" checked="">
                        <label for="Tanker1" class="text-base font-medium text-gray-800">
                        <span><span></span></span>Air Brakes</label>
                    </li>
                    {% endif %}
                    {% if project_details.passenger == '1' %}
                    <li>
                        <input id="Tanker1" type="checkbox" checked="">
                        <label for="Tanker1" class="text-base font-medium text-gray-800">
                        <span><span></span></span>Passenger</label>
                    </li>
                    {% endif %}
                    {% if project_details.doubles_triples == '1' %}
                    <li>
                        <input id="Tanker1" type="checkbox" checked="">
                        <label for="Tanker1" class="text-base font-medium text-gray-800">
                        <span><span></span></span>Doubles/Triples</label>
                    </li>
                    {% endif %}
                    {% if project_details.hazmat == '1' %}
                    <li>
                        <input id="Tanker1" type="checkbox" checked="">
                        <label for="Tanker1" class="text-base font-medium text-gray-800">
                        <span><span></span></span>Hazmat</label>
                    </li>
                    {% endif %}
                </ul>
                {%endif%}  
            </div>

            <div class="mb-8">
                <h4 class="block text-base font-bold text-gray-600 mb-2">Industries Serviced (project type)</h4>

                <ul class="customCheck gap-4 flex flex-col flex-wrap w-full lg:w-3/4 md:flex-row md:gap-y-2">
                {% if project_details.earthworks == '1' or project_details.mining == '1' or project_details.fleet == '1' or project_details.pipeline == '1' or project_details.paving == '1' or project_details.energy_production == '1' %}
                    {% if project_details.earthworks == '1' %}
                    <li class="lg:w-3/12">
                        <input id="projecttype1" type="checkbox" name="projecttype" checked="checked">
                        <label class="text-base font-medium text-gray-800" for="projecttype1">
                        <span></span>Earthworks</label>
                    </li>
                    {%endif%}
                    
                    {% if project_details.mining == '1' %}
                    <li class="lg:w-3/12">
                        <input id="projecttype1" type="checkbox" name="projecttype" checked="checked">
                        <label class="text-base font-medium text-gray-800" for="projecttype1">
                        <span></span>Mining</label>
                    </li>
                    {%endif%}

                    {% if project_details.fleet == '1' %}
                    <li class="lg:w-3/12">
                        <input id="projecttype1" type="checkbox" name="projecttype" checked="checked">
                        <label class="text-base font-medium text-gray-800" for="projecttype1">
                        <span></span>Fleet</label>
                    </li>
                    {%endif%}

                    {% if project_details.pipeline == '1' %}
                    <li class="lg:w-3/12">
                        <input id="projecttype1" type="checkbox" name="projecttype" checked="checked">
                        <label class="text-base font-medium text-gray-800" for="projecttype1">
                        <span></span>Pipeline</label>
                    </li>
                    {%endif%}

                    {% if project_details.paving == '1' %}
                    <li class="lg:w-3/12">
                        <input id="projecttype1" type="checkbox" name="projecttype" checked="checked">
                        <label class="text-base font-medium text-gray-800" for="projecttype1">
                        <span></span>Paving</label>
                    </li>
                    {%endif%}

                    {% if project_details.energy_production == '1' %}
                    <li class="lg:w-3/12">
                        <input id="projecttype1" type="checkbox" name="projecttype" checked="checked">
                        <label class="text-base font-medium text-gray-800" for="projecttype1">
                        <span></span>Energy Production</label>
                    </li>
                    {%endif%}
                    
                {%else%}
                    <li>Not Applicable</li>
                {%endif%}
                </ul>
            </div>

            <div class="w-full mb-8 md:w-4/6 md:mb-12">
                <h4 class="block text-base font-bold text-gray-600 mb-2">Service Skills and Specialize Training</h4>
                <ul class="customCheck flex flex-col flex-wrap gap-4 md:flex-row md:gap-y-2">
                {% if project_details.heavy_equipment_training == '1' or project_details.welder_fabricator == '1' or project_details.truck_mechanic == '1' or project_details.oiler_pm_tech == '1' %}
                    {% if project_details.heavy_equipment_training == '1' %}
                    <li class="lg:w-2/4">
                        <input id="specialize1" type="checkbox" name="specialize" checked="">
                        <label class="text-base font-medium text-gray-800" for="specialize1">
                        <span></span>Heavy Equipment Mechanic</label>                    
                    </li>
                    {% endif %}
                    
                    {% if project_details.welder_fabricator == '1' %}
                    <li class="lg:w-2/4">
                        <input id="specialize1" type="checkbox" name="specialize" checked="">
                        <label class="text-base font-medium text-gray-800" for="specialize1">
                        <span></span>Welder/Fabricator</label>                    
                    </li>
                    {% endif %}

                    {% if project_details.truck_mechanic == '1' %}
                    <li class="lg:w-2/4">
                        <input id="specialize1" type="checkbox" name="specialize" checked="">
                        <label class="text-base font-medium text-gray-800" for="specialize1">
                        <span></span>Truck Mechanic</label>                    
                    </li>
                    {% endif %}

                    {% if project_details.oiler_pm_tech == '1' %}
                    <li class="lg:w-2/4">
                        <input id="specialize1" type="checkbox" name="specialize" checked="">
                        <label class="text-base font-medium text-gray-800" for="specialize1">
                        <span></span>Oilers/PM Tech</label>                    
                    </li>
                    {% endif %}
                {%else%}
                    <li>Not Applicable</li>
                {%endif%}
                </ul>
            </div>

            <div class="mb-8">
                <h4 class="block text-base font-bold text-gray-600 mb-2">Qualification/Area of Expertise</h4>
                <ul class="customCheck md:flex items-center gap-4 flex-wrap">
                    {% if project_details.welding == '1' or project_details.electrical_troubleshooting == '1' or project_details.computer_diagnostics == '1' %}
                        {% if project_details.welding == '1' %}
                        <li>
                            <input id="expertise1" type="checkbox" checked="">
                            <label for="expertise1" class="text-base font-medium text-gray-800">
                            <span><span></span></span>Welding</label>
                        </li>     
                        {%endif%}

                        {% if project_details.electrical_troubleshooting == '1' %}
                        <li>
                            <input id="expertise1" type="checkbox" checked="">
                            <label for="expertise1" class="text-base font-medium text-gray-800">
                            <span><span></span></span>Electrical Troubleshooting</label>
                        </li>     
                        {%endif%}

                        {% if project_details.computer_diagnostics == '1' %}
                        <li>
                            <input id="expertise1" type="checkbox" checked="">
                            <label for="expertise1" class="text-base font-medium text-gray-800">
                            <span><span></span></span>Computer Diagnostics</label>
                        </li>     
                        {%endif%}
                    {%else%}
                        <li>Not Applicable</li>
                    {%endif%}              
                </ul>
            </div>

            <div class="mb-8">
                <strong class="block text-base font-bold text-gray-600 mb-2">Travel/Living Expenses</strong>
                <ul class="customCheck flex flex-row mb-5 gap-4 flex-wrap">
                    {% if project_details.company_supplied == '1' or project_details.not_offered == '1' or project_details.per_diem == '1' %}
                        {% if project_details.company_supplied == '1' %}
                        <li>
                            <input id="Company1" type="checkbox" checked="">
                            <label for="Company1" class="text-base font-medium text-gray-800">
                            <span><span></span></span>Company Supplied</label>
                        </li>  
                        {%endif%}

                        {% if project_details.not_offered == '1' %}
                        <li>
                            <input id="Company1" type="checkbox" checked="">
                            <label for="Company1" class="text-base font-medium text-gray-800">
                            <span><span></span></span>Not offered</label>
                        </li>  
                        {%endif%}

                        {% if project_details.per_diem == '1' %}
                        <li>
                            <input id="Company1" type="checkbox" checked="">
                            <label for="Company1" class="text-base font-medium text-gray-800">
                            <span><span></span></span>Per diem</label>
                        </li>  
                        {%endif%}
                    {%else%}
                        <li>Not Applicable</li>
                    {%endif%}                     
                </ul>

                {% if project_details.company_supplied == '1' %}
                <ul class="customRadio flex flex-row gap-4">
                    <li>
                        <input id="Paid12" type="radio" checked="">
                        <label for="Paid12" class="text-base font-medium text-gray-800">
                        <span><span></span></span>{% if project_details.paid_not_paid == 'Paid' %}Paid{%else%}Not Paid{%endif%}</label>
                    </li>                    
                </ul>
                {% endif %}
            </div>

            <!--<div class="pb-8">
                <button class="heavytechs-bg-dark-orange text-white mr-2 px-6 leading-10 rounded-3xl text-base inline-block">Save</button>
                
            </div>-->

        </form>
        </div>
        </div>

    </div>

    </div>
    </div>
</div>
</div>
</div><!--profileEdit-->



