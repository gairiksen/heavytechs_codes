<div class="bg-gray-100 py-6 px-3.5">
  <div class="w-full bg-white shadow rounded-lg p-5 m-auto md:px-12 md:w-96">
      <h2 class="text-center text-gray-700 text-3xl mb-7 font-bold">{{ 'app.passwords.edit' | t }}</h2>

      <form action="/passwords" method="post">
        {% include 'authenticity_token' %}

        <ul>
          <li class="pb-4">
            <span class="block">{{ 'app.passwords.password' | t }}</span>
            <input name="password[password]" type="password" id="password" class="bg-gray-100 border border-gray-200 h-11 rounded-3xl px-5 outline-none text-base text-gray-700 w-full" value="{{object.password}}" autocomplete="new-password"/>
            {% include 'theme/simple/field_error', errors: object.errors.password %}
          </li>

          <li class="pb-4">
            <span class="block">{{ 'app.passwords.password_confirmation' | t }}</span>
            <input name="password[password_confirmation]" type="password" id="password_confirmation" class="bg-gray-100 border border-gray-200 h-11 rounded-3xl px-5 outline-none text-base text-gray-700 w-full" value="{{object.password_confirmation}}" autocomplete="off" />
            {% include 'theme/simple/field_error', errors: object.errors.password_confirmation %}
          </li>

          <li>
          <button class="heavytechs-bg-dark-orange text-white px-10 leading-10 rounded-3xl text-base inline-block">{{ 'app.passwords.password_update' | t }}</button>
          </li>

        </ul>
      </form>
  </div>
</div>
