          {% render 'theme/simple/ui/icon', icon: 'dashboard', class: 'w-8' %}
          <span class="sr-only">{{ 'admin.navigation.dashboard' | t }}</span>
        </a>
      </li>

      <li>
        <a href="/admin/sales" title="{{ 'admin.navigation.sales' | t }}" class="my-4 p-4 block rounded text-content-sidenote transition-colors {% if page == 'admin/sales' %} bg-panel text-interaction {% endif %}">
