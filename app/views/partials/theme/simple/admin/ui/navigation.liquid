<aside class="h-screen px-4 py-8 fixed top-0 start-0 overflow-y-auto z-30 flex flex-col justify-between items-center border-e border-frame bg-page">
  <div>
    {% render 'theme/simple/ui/avatar', profile: current_profile, size: 48, class: 'w-14 h-14' %}
  </div>

  <nav class="mt-16">
    <ul>
      <li>
