  </nav>

  <a href="/" title="{{ 'admin.navigation.close_admin' | t }}" class="mt-4 p-4 block rounded text-content-sidenote transition-colors">
    {% render 'theme/simple/ui/icon', icon: 'home', class: 'w-8' %}
    <span class="sr-only">{{ 'admin.navigation.close_admin' | t }}</span>
  </a>
