<div class="py-11 bg-gray-50">
        <div class="container mx-auto px-3.5">
            <div class="flex justify-between flex-col md:flex-row" x-data="">
                <div class="w-full mb-6 md:w-1/5 md:mb-0">
                    <ul>
                        <li class="relative">
                            <a href="/do_search?keyword={{keyword}}" class="block leading-10 px-6 text-base font-medium text-indigo-300 border-l-4 border-transparent text-gray-800 font-normal">
                                All results
                            </a>
                        </li>
                        <li class="relative my-2">
                            <a href="/do_search/mechanic?keyword={{keyword}}&search_type=mechanic" class="block leading-10 px-6 text-base font-medium text-indigo-300 border-l-4 border-transparent  heavytechs-text-dark-orange heavytechs-border-color-orange bg-white">
                                Mechanics
                            </a>
                        </li>
                        <li class="relative">
                            <a href="/do_search/projects?keyword={{keyword}}&search_type=projects" class="block leading-10 px-6 text-base font-medium text-indigo-300 border-l-4 border-transparent text-gray-800 font-normal">
                                Projects
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="w-full md:w-3/4">

                    <div class="profileEdit_right w-full">
                        {% if records.results.size == 0 or records == '' %}
                        <div class="bg-white p-5 shadow-sm rounded-md mb-2.5">
                            <div class="flex justify-between">
                            No records found.
                            </div>
                        </div>
                        {%else%}
                        {% for u in records.results %}

                        <div class="bg-white p-5 shadow-sm rounded-md mb-2.5">
                            
                            <div class="flex justify-between flex-col md:flex-row">
                                <div>
                                    <figure>
                                        {%if u.photo.photo.url %}
                                            <img src="{{u.photo.photo.url}}" alt="" class="w-36 h-36 rounded-full m-auto mb-5 md:m-0">
                                        {%else%}
                                            <img src="{{'images/signup-img2.png' | asset_url}}" alt="" class="w-36 h-36 rounded-full m-auto mb-5 md:m-0">
                                        {%endif%}
                                    </figure>
                                </div>

                                <div class="w-full md:w-4/5">
                                    <div class="flex justify-between items-start flex-col-reverse md:flex-row">
                                        <div>
                                            {%if u.name != ''%}
                                                <h2 class="text-gray-700 font-bold text-xl mb-2">{{u.name}}</h2>
                                            {%else%}
                                                <h2 class="text-gray-700 font-bold text-xl mb-2">N/A</h2>
                                            {%endif%}

                                            {%if u.profile_bio != ''%}
                                                <span class="block heavytechs-text-dark-orange text-base mb-3">{{u.profile_bio.position}}</span>
                                            {%else%}
                                                <h2 class="text-gray-700 font-bold text-xl mb-2">N/A</h2>
                                            {%endif%}
                                        </div>
                                        
                                        {%if u.availability == '1'%}
                                        <strong class="text-base text-gray-700 font-normal bg-blue-200 px-2 block leading-7 rounded-md">Available now</strong>    
                                        {%endif%}
                                    </div>
                                    
                                    <p class="text-base text-gray-700 mb-5">{{u.profile_bio.short_description}}</p>
                                    <ul class="mb-8">
                                        <li class="flex items-left md:items-center mb-1.5 flex-col md:flex-row">
                                            <span class="block text-gray-500 text-base mr-7 w-28 mb-3 md:mb-0">Company name:</span>
                                            <strong class="block text-base text-gray-800 font-medium">{{u.profile_bio.company_name}}</strong>
                                        </li>
                                        <li class="flex items-left md:items-center mb-1.5 flex-col md:flex-row">
                                            <span class="block text-gray-500 text-base mr-7 w-28 mb-3 md:mb-0">Location:</span>
                                            <strong class="block text-base text-gray-800 font-medium">{{u.profile_bio.location}}, {{u.profile_bio.ready_for_travel}}</strong>
                                        </li>
                                        <li class="flex items-left md:items-center mb-1.5 flex-col md:flex-row">
                                            <span class="block text-gray-500 text-base mr-7 w-28 mb-3 md:mb-0">Experience:</span>
                                            <strong class="block text-base text-gray-800 font-medium">{{u.profile_bio.total_experience}}</strong>
                                        </li>
                                        <li class="flex items-left md:items-center mb-1.5 flex-col md:flex-row">
                                            <span class="block text-gray-500 text-base mr-7 w-28 mb-3 md:mb-0">Drivers License:</span>
                                            <strong class="block text-base text-gray-800 font-medium">{{u.profile_skills.drivers_license_class}}</strong>
                                        </li>
                                    </ul>

                                    <a href="/find_mechanic/details?m_id={{u.user_id}}" class="heavytechs-bg-dark-orange text-white heavytechs-border-color-orange border-2 px-6 leading-7 rounded-3xl text-sm inline-block">View more</a>
                                </div>
                            </div>

                        </div>
                        {% endfor %}
                        {%endif%}

                    

                    </div>

                    
                </div>
            </div>
        </div>
    </div>