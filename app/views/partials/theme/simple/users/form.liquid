<div class="bg-gray-100 py-6 px-3.5">
<div class="w-full bg-white shadow rounded-lg p-5 m-auto md:px-10 md:w-96">
    <h2 class="text-center text-gray-700 text-3xl mb-7 font-bold">Create an Account</h2>
    <form action="/users" method="post">
      {% include 'authenticity_token' %}
      <input name="profile[language]" type="hidden" value="{{context.language}}">
      <input name="profile[profile_for]" type="hidden" value="{{profile_for}}">

      <ul>
          <li class="pb-4">
              <label class="font-normal block mb-1 pl-4 text-base text-gray-800">{{ 'app.users.form.first_name' | t }}</label>
              <input required type="text" name="profile[first_name]" id="first_name" value="{{ object.first_name | raw_escape_string }}" placeholder="Type" class="bg-gray-100 border border-gray-200 h-11 rounded-3xl px-5 outline-none text-base text-gray-700 w-full">
              {% include 'theme/simple/field_error', errors: object.errors.first_name %}
          </li>
          <li class="pb-4">
              <label class="font-normal block mb-1 pl-4 text-base text-gray-800">{{ 'app.users.form.last_name' | t }}</label>
              <input required type="text" name="profile[last_name]" id="last_name" value="{{ object.last_name | raw_escape_string }}" placeholder="Type" class="bg-gray-100 border border-gray-200 h-11 rounded-3xl px-5 outline-none text-base text-gray-700 w-full">
              {% include 'theme/simple/field_error', errors: object.errors.last_name %}
          </li>
          <li class="pb-4">
              <label class="font-normal block mb-1 pl-4 text-base text-gray-800">{{ 'app.users.form.email' | t }}</label>
              <input required type="email" name="user[email]" id="email" value="{{ object.email | raw_escape_string }}" placeholder="Type" class="bg-gray-100 border border-gray-200 h-11 rounded-3xl px-5 outline-none text-base text-gray-700 w-full">
              {% include 'theme/simple/field_error', errors: object.errors.email %}
          </li>
          <li class="pb-4">
              <label class="font-normal block mb-1 pl-4 text-base text-gray-800">{{ 'app.users.form.password' | t }}</label>
              <input required type="password" name="user[password]" id="password" value="{{ object.password | raw_escape_string }}" placeholder="Type" class="bg-gray-100 border border-gray-200 h-11 rounded-3xl px-5 outline-none text-base text-gray-700 w-full">
              {% include 'theme/simple/field_error', errors: object.errors.password %}
          </li>
          <li class="pb-4 customCheck">
              
              <input id="agreed" type="checkbox" name="user[agreed]" value="1" checked="" required>
              <label for="agreed" class="text-base font-medium text-gray-800">
                  <span><span></span></span>
                  {{ 'app.users.form.agreed' | t}}
                  <!--<a href="#" class="text-blue-500 underline hover:no-underline">Terms of Service</a>, 
                  <a href="#" class="text-blue-500 underline hover:no-underline">Privacy Policy</a>, and 
                  <a href="#" class="text-blue-500 underline hover:no-underline">Code of Conduct</a>-->
              </label>
              {% include 'theme/simple/field_error', errors: object.errors.agreed %}
          </li>
          <!--<li class="pb-4">{% include 'hcaptcha', object: object %}</li>-->
          <li class="text-center">
              <button class="heavytechs-bg-dark-orange text-white px-10 leading-10 rounded-3xl text-base inline-block">{{ 'app.users.form.signup' | t }}</button>
          </li>
      </ul>
    </form>
</div>
</div>
{%comment%}
<form action="/users" method="post" class="w-full mx-auto card md:w-96">
  {% include 'authenticity_token' %}
  <input name="profile[language]" type="hidden" value="{{context.language}}">

  <fieldset>
    <label for="first_name">{{ 'app.users.form.first_name' | t }}</label>
    <input name="profile[first_name]" type="text" id="first_name" value="{{ object.first_name | raw_escape_string }}" class="w-full" autocomplete="given-name" autofocus required>
    {% include 'theme/simple/field_error', errors: object.errors.first_name %}
  </fieldset>

  <fieldset class="mt-3">
    <label for="last_name">{{ 'app.users.form.last_name' | t }}</label>
    <input name="profile[last_name]" type="text" id="last_name" value="{{ object.last_name | raw_escape_string }}" class="w-full" autocomplete="family-name" autofocus required>
    {% include 'theme/simple/field_error', errors: object.errors.last_name %}
  </fieldset>

  <fieldset class="mt-3">
    <label for="email">{{ 'app.users.form.email' | t }}</label>
    <input name="user[email]" type="email" id="email" value="{{ object.email | raw_escape_string }}" class="w-full" autocomplete="email"  autofocus required>
    {% include 'theme/simple/field_error', errors: object.errors.email %}
  </fieldset>

  <fieldset class="mt-3">
    <label for="password">{{ 'app.users.form.password' | t }}</label>
    <input name="user[password]" type="password" id="password" value="{{ object.password | raw_escape_string }}" class="w-full" autocomplete="new-password" required>
    {% include 'theme/simple/field_error', errors: object.errors.password %}
  </fieldset>

  <fieldset class="flex items-center mt-3">
    <input type="checkbox" name="user[agreed]" id="agreed" required>
    <div class="ms-2">
      <label for="agreed" class="block">{{ 'app.users.form.agreed' | t}}</label>
      {% include 'theme/simple/field_error', errors: object.errors.agreed %}
    </div>
  </fieldset>

  {% include 'hcaptcha', object: object %}

  <fieldset class="mt-5 text-center">
    <button class="mt-3 button">{{ 'app.users.form.signup' | t }}</button>
  </fieldset>
</form>
{%endcomment%}