{%comment%}
<div class="max-w-lg m-auto">
    <div class="bg-gray-900 py-5 text-center rounded-t-lg">
        <img src="{{ 'images/Logo.svg' | asset_url }}" alt="" class="m-auto">
    </div>

    <div class="bg-gray-50 px-8 py-6">
        <h2 class="text-gray-700 text-2xl font-extrabold mb-3">HeavyTechs Reset Password</h2>
    </div>

    <div class="bg-gray-100 p-8">
        <h4 class="text-sm text-gray-800 font-bold mb-4">
            Someone requested that your password for your HeavyTechs account be reset.  
        </h4>
        <div class="flex items-center mb-3">
            <a href="{{ data.url }}" class="flex items-center text-indigo-400 hover:underline">Reset link</a>
            
        </div>
        <p class="text-xs text-gray-800">
            This link is valid until can be used once. If you did not request to reset your password please ignore this email. Your password won’t change until you create a new password.
        </p>
    </div>

    <div class="bg-gray-50 px-8 py-6 rounded-b-lg">
        <strong class="text-sm font-bold text-gray-700">Heavy Techs <span class="font-normal">Team</span></strong>
    </div>

</div>
{%endcomment%}

