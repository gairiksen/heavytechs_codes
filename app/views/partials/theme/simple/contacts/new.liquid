<div class="bg-gray-50 py-11">
        <div class="w-full md:w-4/5 m-auto px-3.5">
            <h2 class="text-3xl font-bold text-gray-700 mb-14">Contact Us</h2>

            <div>
                <form action="/contacts" method="post">
                    {% include 'authenticity_token' %}
                    <ul>
                        <li class="flex items-center flex-col sm:flex-row">
                            <label class="block w-full mb-2 md:w-64 sm:mb-0">Email</label>
                            <input type="text" placeholder="Type" name="contact[email]" id="email" value="{{ object.email | raw_escape_string }}" class="bg-white border border-gray-200 h-11 rounded-3xl px-5 outline-none text-base text-gray-700 w-full mr-2 md:w-64">
                            {% include 'theme/simple/field_error', errors: object.errors.email %}
                        </li>
                        <li class="flex items-center my-4 flex-col sm:flex-row">
                            <label class="block w-full mb-2 md:w-64 sm:mb-0">Subject</label>
                            <input type="text" name="contact[reason]" id="reason" placeholder="Type" class="bg-white border border-gray-200 h-11 rounded-3xl px-5 outline-none text-base text-gray-700 w-full mr-2 md:w-64">
                            {% include 'theme/simple/field_error', errors: object.errors.reason %}
                        </li>
                        <li class="flex mb-4 relative flex-col sm:flex-row">
                            <div>
                                <label class="block w-full mb-2 md:w-64 sm:mb-0">Message</label>
                                <p class="w-full relative text-xs text-gray-400 mb-2 md:absolute md:top-6 md:w-52 sm:mb-0">
                                    Please explain your message in detail so that we may help you as best as possible in the shortest amount of time.
                                </p>
                            </div>
                            
                            <textarea placeholder="Type" name="contact[message]" id="message" class="bg-white border border-gray-200 h-40 rounded-lg resize-none p-2 outline-none text-base text-gray-700 w-full md:w-2/4"></textarea>
                            {% include 'theme/simple/field_error', errors: object.errors.message %}
                        </li>
                        <li class="flex items-center flex-col sm:flex-row">
                            <label class="block w-full md:w-64 md:block sm:hidden"></label>
                            <button class="heavytechs-bg-dark-orange text-white mr-2 px-10 leading-10 rounded-3xl text-base inline-block w-full sm:w-auto">{{ 'app.models.contacts.form.submit' | t }}</button>
                        </li>
                    </ul>
                </form>
            </div>
        </div>
    </div>


{%comment%}
<section class="container">
  <h2 class="bigtitle text-center">{{ 'app.models.contacts.contact-us' | t }}</h2>

  <form action="/contacts" method="post" class="card md:p-8 mx-auto max-w-4xl">
    {% include 'authenticity_token' %}

    <div class="w-full md:max-h-80 flex flex-col md:flex-wrap">
      <fieldset class="md:w-1/3 order-1">
        <label class="mb-1 block" for="email">{{ 'app.models.contacts.form.email' | t }}:</label>
        <input name="contact[email]" type="text" id="email" value="{{ object.email | raw_escape_string }}" class="w-full" autocomplete="email" autofocus required>
        {% include 'theme/simple/field_error', errors: object.errors.email %}
      </fieldset>

      <fieldset class="md:w-1/3 mt-4 order-2">
          <label class="mb-1 block" for="reason">{{ 'app.models.contacts.form.reason' | t }}:</label>
          {% assign reasons = 'app.models.contacts.reasons' | t %}
          <select name="contact[reason]" id="reason" class="w-full" required>
            <option value="" disabled selected>{{ 'app.models.contacts.blank_reason' | t }}</option>
            {% for reason in reasons %}
              <option value="{{ reason[0] }}" {% if reason[0] == object.reason %}selected{% endif %}>{{ reason[1] }}</option>
            {% endfor %}
          </select>
        {% include 'theme/simple/field_error', errors: object.errors.reason %}
      </fieldset>

      <fieldset class="md:w-1/3 mt-4 order-5 md:order-3">
        {% include 'hcaptcha', object: object %}
      </fieldset>

      <fieldset class="md:w-2/3 mt-4 md:mt-0 md:ps-8 order-4">
        <label class="mb-1 block" for="message">{{ 'app.models.contacts.form.message' | t }}:</label>
        <textarea name="contact[message]" id="message" class="w-full h-full" required rows="8">{{ object.message }}</textarea>
        {% include 'theme/simple/field_error', errors: object.errors.message %}
        {% render 'theme/simple/ui/form-tip', content_key: 'app.models.contacts.form.message_tip' %}
      </fieldset>
    </div>

    <fieldset class="mt-8 text-center">
      <button class="button">{{ 'app.models.contacts.form.submit' | t }}</button>
    </fieldset>
  </form>
</section>
{%endcomment%}