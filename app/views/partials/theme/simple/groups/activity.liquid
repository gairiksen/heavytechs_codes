<div class="container">
  {% liquid
    if current_profile.id
      render 'theme/simple/comments/new_entry', commentable: group, commentable_type: 'group', placeholder: "What's new?", context: context, presigned_url: presigned_url
    endif
  %}

  <section class="text-gray-900 body-font">
    <div class="grid grid-cols-1 gap-6 my-6 md:py-5">
      {% for record in list.results %}
        {% render 'theme/simple/activities/feed_unit', payload: record.payload, current_profile: current_profile %}
      {% else %}
        <p class="container my-8 text-lg">{{ 'app.search.no_items_found.title' | t }}</p>
      {% endfor %}
    </div>
  </section>
</div>
