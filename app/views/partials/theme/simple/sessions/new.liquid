<div class="bg-gray-100 py-6 px-3.5">
  <div class="w-full bg-white shadow rounded-lg p-5 m-auto md:px-12 md:w-96">
      <h2 class="text-center text-gray-700 text-3xl mb-7 font-bold">Log In</h2>

      <form action="/sessions/create" method="post">
          {% render 'authenticity_token', context: context %}
          <ul>
              <li class="pb-4">
                  <label class="font-normal block mb-1 pl-4 text-base text-gray-800">{{ 'app.login_form.email' | t }}</label>
                  <input name="user[email]" type="email" id="email" value="{{ object.email | raw_escape_string }}" placeholder="Type" class="bg-gray-100 border border-gray-200 h-11 rounded-3xl px-5 outline-none text-base text-gray-700 w-full">
                  {% render 'theme/simple/field_error', errors: object.errors.email %}
              </li>
              <li class="pb-4">
                  <label class="font-normal block mb-1 pl-4 text-base text-gray-800">{{ 'app.login_form.password' | t }}</label>
                  <input  name="user[password]" type="password" id="password" value="" class="bg-gray-100 border border-gray-200 h-11 rounded-3xl px-5 outline-none text-base text-gray-700 w-full">
                  {% render 'theme/simple/field_error', errors: object.errors.password %}
              </li>
              <li class="text-center">
                  <button class="heavytechs-bg-dark-orange text-white px-10 leading-10 rounded-3xl text-base inline-block">{{ 'app.login_form.log_in' | t }}</button>
              </li>
          </ul>

          <input type="hidden" name="user[return_page]" value="{{context.params.return_page}}">
      </form>

      <div class="text-center pt-5">
          <div class="flex justify-center">
              <span class="block mr-2 font-normal text-base text-gray-800">{{ 'app.login_form.anonymous' | t }}</span>
              <a href="/sign-up-main" class="block text-blue-500 underline hover:no-underline">{{ 'app.login_form.register' | t }}</a>
          </div>
          <div class="flex justify-center">
              <span class="block mr-2 font-normal text-base text-gray-800">{{ 'app.login_form.password_lost' | t }}</span>
              <a href="/passwords/reset" class="block text-blue-500 underline hover:no-underline">{{ 'app.login_form.reset' | t }}</a>
          </div>
      </div>
  </div>
  </div>
{%comment%}
<section class="my-10 container items-center">
  <h2 class="bigtitle text-center">{{ 'app.login_form.log_in' | t }}</h2>

  <form action="/sessions/create" method="post" class="card w-full md:w-96 mx-auto">
    {% render 'authenticity_token', context: context %}

    <fieldset>
      <label for="email">{{ 'app.login_form.email' | t }}</label>
      <input name="user[email]" type="email" id="email" value="{{ object.email | raw_escape_string }}" class="w-full" autofocus>
      {% render 'theme/simple/field_error', errors: object.errors.email %}
    </fieldset>

    <fieldset class="mt-3">
      <label for="password">{{ 'app.login_form.password' | t }}</label>
      <input name="user[password]" type="password" id="password" value="" autocomplete="new-password" class="w-full">
      {% render 'theme/simple/field_error', errors: object.errors.password %}
    </fieldset>

    <fieldset class="mt-5">
      <button class="button mt-3">{{ 'app.login_form.log_in' | t }}</button>
    </fieldset>

    <p class="mt-8">
      {{ 'app.login_form.anonymous' | t }} <a href='/sign-up-main' class="underline ps-3">{{ 'app.login_form.register' | t }}</a>
    </p>
    <p class="mt-1">
      {{ 'app.login_form.password_lost' | t }} <a href='/passwords/reset' class="underline ps-3">{{ 'app.login_form.reset' | t }}</a>
    </p>
  </form>
</section>
{%endcomment%}