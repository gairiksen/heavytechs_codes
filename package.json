{
  "scripts": {
    "dev-watch": "cross-env NODE_ENV=development webpack-cli -w",
    "dev-gui": "pos-cli gui serve dev",
    "dev-sync": "pos-cli sync dev --livereload",
    "dev-logs": "pos-cli logs dev",
    "start": "concurrently --kill-others-on-fail npm:dev-*",
    "build": "cross-env NODE_ENV=production webpack-cli",
    "build:dev": "cross-env NODE_ENV=development webpack-cli",
    "test": "testcafe 'chromium:headless --sandbox' --stop-on-first-fail test --reporter html:test-report.html -s path=test/screenshots,fullPage=true,takeOnFails=true --selector-timeout 30000",
    "clean": "rimraf app/assets/{js,css}/*",
    "deploy": "npm run build && CI=true pos-cli deploy",
    "predeploy": "npm run clean",
    "ci:build": "docker run -it -u $(id -u ${USER}):$(id -g ${USER}) --rm -v $PWD:/app -w /app node:12-alpine npm ci && npm run build",
    "ci:test": "docker run -it -e MPKIT_URL=$MPKIT_URL -u $(id -u ${USER}):$(id -g ${USER}) --rm -v $PWD:/app -w /app platformos/testcafe \"npm run test\"",
    "ci:test:unit": "sh scripts/run-unit-tests.sh",
    "ci:test:publish": "sh scripts/upload-test-report.sh"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/typography": "^0.4.0",
    "alpinejs": "^2.8.2",
    "autoprefixer": "^10.2.5",
    "chalk": "^4.1.1",
    "commander": "^7.2.0",
    "concurrently": "^6.1.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.4",
    "esbuild-loader": "^2.13.0",
    "faker-cli": "^2.0.0",
    "js-yaml": "^4.1.0",
    "lodash.startcase": "^4.4.0",
    "mini-css-extract-plugin": "^1.6.0",
    "pluralize": "^8.0.0",
    "postcss": "^8.2.14",
    "postcss-fixes": "^2.0.1",
    "postcss-import": "^14.0.1",
    "postcss-loader": "^5.2.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.7",
    "tailwindcss-rtl": "^0.7.3",
    "tapable": "^1.1.3",
    "testcafe": "^15.1.317922",
    "testcafe-browser-provider-lambdatest": "^2.0.5",
    "testcafe-reporter-html": "^1.4.6",
    "testcafe-reporter-multiple-html": "^1.0.0",
    "testcafe-reporter-spec-time": "^4.0.0",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.7.0",
    "webpack-require-from": "^1.8.3",
    "yeoman-environment": "^3.3.0",
    "yeoman-generator": "^5.2.0"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  },
  "browserslist": "> 1% or last 2 years",
